{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cw20HookMsg",
  "anyOf": [
    {
      "description": "Deposit a user also can deposit the collateral to any position",
      "type": "object",
      "required": [
        "deposit"
      ],
      "properties": {
        "deposit": {
          "type": "object",
          "required": [
            "asset_info"
          ],
          "properties": {
            "asset_info": {
              "$ref": "#/definitions/AssetInfo"
            }
          }
        }
      }
    },
    {
      "description": "Burn a user sends the asset tokens to the contract to get back the collteral tokens",
      "type": "object",
      "required": [
        "burn"
      ],
      "properties": {
        "burn": {
          "type": "object",
          "required": [
            "collateral_info"
          ],
          "properties": {
            "collateral_info": {
              "$ref": "#/definitions/AssetInfo"
            }
          }
        }
      }
    },
    {
      "description": "Auction a user can sell their asset tokens in discounted prices",
      "type": "object",
      "required": [
        "auction"
      ],
      "properties": {
        "auction": {
          "type": "object",
          "required": [
            "collateral_info",
            "position_owner"
          ],
          "properties": {
            "collateral_info": {
              "$ref": "#/definitions/AssetInfo"
            },
            "position_owner": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "AssetInfo": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "token"
          ],
          "properties": {
            "token": {
              "type": "object",
              "required": [
                "contract_addr"
              ],
              "properties": {
                "contract_addr": {
                  "$ref": "#/definitions/HumanAddr"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "native_token"
          ],
          "properties": {
            "native_token": {
              "type": "object",
              "required": [
                "denom"
              ],
              "properties": {
                "denom": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
