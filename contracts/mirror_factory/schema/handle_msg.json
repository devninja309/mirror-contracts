{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleMsg",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "post_initialize"
      ],
      "properties": {
        "post_initialize": {
          "type": "object",
          "required": [
            "mirror_token"
          ],
          "properties": {
            "mirror_token": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "update_config"
      ],
      "properties": {
        "update_config": {
          "type": "object",
          "properties": {
            "mint_per_block": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Uint128"
                },
                {
                  "type": "null"
                }
              ]
            },
            "owner": {
              "anyOf": [
                {
                  "$ref": "#/definitions/HumanAddr"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "update_weight"
      ],
      "properties": {
        "update_weight": {
          "type": "object",
          "required": [
            "symbol",
            "weight"
          ],
          "properties": {
            "symbol": {
              "type": "string"
            },
            "weight": {
              "$ref": "#/definitions/Decimal"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "whitelist"
      ],
      "properties": {
        "whitelist": {
          "type": "object",
          "required": [
            "market_contract",
            "mint_contract",
            "oracle_contract",
            "staking_contract",
            "symbol",
            "token_contract",
            "weight"
          ],
          "properties": {
            "market_contract": {
              "$ref": "#/definitions/HumanAddr"
            },
            "mint_contract": {
              "$ref": "#/definitions/HumanAddr"
            },
            "oracle_contract": {
              "$ref": "#/definitions/HumanAddr"
            },
            "staking_contract": {
              "$ref": "#/definitions/HumanAddr"
            },
            "symbol": {
              "type": "string"
            },
            "token_contract": {
              "$ref": "#/definitions/HumanAddr"
            },
            "weight": {
              "$ref": "#/definitions/Decimal"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "mint"
      ],
      "properties": {
        "mint": {
          "type": "object",
          "required": [
            "symbol"
          ],
          "properties": {
            "symbol": {
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "Decimal": {
      "description": "A fixed-point decimal value with 18 fractional digits, i.e. Decimal(1_000_000_000_000_000_000) == 1.0\n\nThe greatest possible value that can be represented is 340282366920938463463.374607431768211455 (which is (2^128 - 1) / 10^18)",
      "type": "string"
    },
    "HumanAddr": {
      "type": "string"
    },
    "Uint128": {
      "type": "string"
    }
  }
}
